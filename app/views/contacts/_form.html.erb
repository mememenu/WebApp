<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    
  <div class="col-lg-9 col-md-9 col-sm-8 col-xs-8 tz-form-content" id="contact">

      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div class="field">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div class="field">
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div class="field">
            <%= f.label :favorite_restaurant %>
            <%= f.text_field :favorite_restaurant %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="field">
            <%= f.label :message %>
            <%= f.text_area :message, class: "contact-message" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
          <%= f.submit "Send", class: 'tzsubmit-form' %>
        </div>
      </div>

  </div>


<% end %>
