<div class="container col-xs-12">
<h1>Listing restaurants</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Zone</th>
      <th>Foursquare ID</th>
      <th>Delivers</th>
      <th># of Menus</th>
      <th># of Dishes</th>
      <th>Hidden</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.zone.downcase %></td>
        <td><%= place.foursquare_id %></td>
        <td><%= place.delivery_url ? "Yes" : "No" %></td>
        <td><%= place.menus.count %></td>
        <td><%= place.dishes.count %></td>
        <td><%= place.hide ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_place_path %>

</div>
