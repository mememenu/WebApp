<div class="container">
  <% @restaurants.in_groups_of(4, false) do |group| %>
    <div class="row">
      <% group.each do |restaurant| %>
        <% unless restaurant.hide %>
        <div class="container col-md-3">
            <%= link_to restaurant do %>
              <%= image_tag restaurant.avatar.url(:medium) %>
            <% end %>
        </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>