<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center">
        <p>
          <%= @menu.name %> Menu at <%= @menu.restaurants.first.name %>
        </p>

        <% unless @menu.description.blank? %>
          <p>
            <strong>Description:</strong>
            <%= @menu.description %>
          </p>
        <% end %>
        
        <%= link_to 'Back to Restaurant', @menu.restaurants.first %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="text-center">
    <h5> Categories </h5>
    <% @categories.each do |category| %>
      <strong><p><%= link_to category.name, category %></p></strong>
    <% end %>
  </div>
    </div>
  </div>
</div>


<% if current_user %>
<% if current_user.admin || current_user.restaurant_id == @menu.restaurants.first.id%>
<hr>
  <div class="container">
    <div class="text-center">
      <h3> Administrator Panel </h3>
      <hr>
      <p>
        <strong>New Category:</strong>
      </p>
      <%= render 'categories/form' %> 
      <hr>
      <p>
        <%= link_to 'Edit Menu Details', edit_menu_path(@menu) %>
      </p>
    </div>
  </div>
<% end %>
<% end %>







