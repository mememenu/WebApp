<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center">
        <p>
          <%= @menu.name %> Menu at <%= @menu.restaurants.first.name %>
        </p>

        <% unless @menu.description.blank? %>
          <p>
            <strong>Description:</strong>
            <%= @menu.description %>
          </p>
        <% end %>
        
        <%= link_to 'Back to Restaurant', @menu.restaurants.first %> |
        <%= link_to 'Edit', edit_menu_path(@menu) %>
      </div>
    </div>

    <div class="col-md-6">
      <h5> Add a new category </h5>
      <%= render 'categories/form' %>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="text-center">
    <h3> Categories </h3>
    <% @categories.each do |category| %>
      <p><%= link_to category.name, category %></p>
    <% end %>
  </div>
</div>







