<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center">
        <p>
          <strong>Restaurant:</strong>
          <%= @menu.restaurants.first.name %>
        </p>

        <p>
          <strong>Display name:</strong>
          <%= @menu.display_name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @menu.description %>
        </p>

        <%= link_to 'Edit', edit_menu_path(@menu) %> |
        <%= link_to 'Back', menus_path %>
      </div>
    </div>

    <div class="col-md-6">
      <h5> Add a new category </h5>
      <%= render 'categories/form' %>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="text-center">
    <h3> Categories </h3>
    <% @categories.each do |category| %>
    <p><%= link_to category.name, category %></p>
    <% end %>
  </div>
</div>



