<div class="row sign_in">
  <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <%= form_for(:user, :url => session_path(:user)) do |f| %>

    <div class="form-group">
      <%= f.text_field :email, class:'form-control',placeholder:'Email' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class:'form-control',placeholder:'Password' %>
    </div>
    <div ><i class="icon-heart"></i></div>
    <%= f.submit 'Sign in', class:'btn btn-primary btn-block' %>
    <div class="text-center">
      <%= link_to 'Connect with Facebook', user_omniauth_authorize_path(:facebook), class:'btn btn-facebook btn-block'%>
    </div>
   <div class="text-center">
    Don't have an account yet? <%= link_to "Sign up", new_user_registration_path %>.
    </div>
    <% end %>
  </div>

</div>
