<div class="container col-xs-12">

  <p>
    <strong>Genre:</strong>
    <%= @cuisine.genre %>
  </p>

  <div class="container">
    <% @cuisine.restaurants.in_groups_of(3, false) do |group| %>
      <div class="row">
        <% group.each do |restaurant| %>
          <div class="container col-md-4">
              <%= link_to restaurant do %>
                <%= image_tag restaurant.avatar.url(:medium) %>
              <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>