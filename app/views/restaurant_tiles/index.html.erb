<h1>Listing restaurant_tiles</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_tiles.each do |restaurant_tile| %>
      <tr>
        <td><%= restaurant_tile.restaurant %></td>
        <td><%= link_to 'Show', restaurant_tile %></td>
        <td><%= link_to 'Edit', edit_restaurant_tile_path(restaurant_tile) %></td>
        <td><%= link_to 'Destroy', restaurant_tile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

