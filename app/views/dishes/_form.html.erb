<script>
var slide;
slide = function() {
$('.slider').slider()  
};
$(document).ready(slide);
$(document).on('page:load', slide);
</script>

<%= form_for @dish, :html => { :multipart => true } do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :portion_size %><br>
    <%= f.select :portion_size, ['Small','Medium','Full'] %>
  </div>
  <div class="field">
    <%= f.label :spice %><br>
    <%= f.number_field :spice, :class => "slider",
                 data: {'slider-min' => '1',
                        'slider-max' => '5',
                        'slider-step' => '1',
                        'slider-value' => '1' } %>
  </div>
  <div class="field">
    <%= f.label :hot %><br>
    <%= f.check_box :hot %>
  </div>
  <div class="field">
    <%= f.label :gluten_free %><br>
    <%= f.check_box :gluten_free %>
  </div>
  <div class="field">
    <%= f.label :vegetarian %><br>
    <%= f.check_box :vegetarian %>
  </div>
  <div class="field">
    <%= f.text_field :category_id, value: @category.id %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="field">
        <%= f.file_field :avatar %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
