<%= form_for @dish, :html => { :multipart => true } do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :portion_size %><br>
    <%= f.select :portion_size, ['Small','Medium','Full'] %>
  </div>
  <div class="field">
    <%= f.label :spice %><br>
    <%= f.select :spice, [0,1,2,3,4]%>
  </div>
  <div class="field">
    <%= f.label :hot %><br>
    <%= f.check_box :hot %>
  </div>
  <div class="field">
    <%= f.label :gluten_free %><br>
    <%= f.check_box :gluten_free %>
  </div>
  <div class="field">
    <%= f.label :vegetarian %><br>
    <%= f.check_box :vegetarian %>
  </div>
  <div class="field">
    <%= f.label :hide %><br>
    <%= f.check_box :hide %>
  </div>
  <div class="field">
    <%= f.hidden_field :category_id, value: dish_value %>
  </div>

  <hr>
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <div class="field">
          <%= f.label :avatar %><br>
          <%= f.file_field :avatar %>
      </div>
    </div>
  </div>
  <hr>

  <div class="col-md-12">
    <div class="field">
      <%= hidden_field_tag "dish[ingredient_ids][]", nil %>
      <% @ingredients.in_groups_of(6, false) do |group| %>
        <div class="row">
          <% group.each do |ingredient| %>
          <div class="col-md-2">
            <%= check_box_tag "dish[ingredient_ids][]", ingredient.id, @dish.ingredient_ids.include?(ingredient.id), id: dom_id(ingredient) %>
            <%= label_tag dom_id(ingredient), ingredient.name %><br>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>



<% end %>
