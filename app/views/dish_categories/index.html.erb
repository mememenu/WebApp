<h1>Listing dish_categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Dish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dish_categories.each do |dish_category| %>
      <tr>
        <td><%= dish_category.category %></td>
        <td><%= dish_category.dish %></td>
        <td><%= link_to 'Show', dish_category %></td>
        <td><%= link_to 'Edit', edit_dish_category_path(dish_category) %></td>
        <td><%= link_to 'Destroy', dish_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

