<div class="container col-xs-12">

  <div>
    <h1>
      Listing lists
      <%= link_to 'Edit Home Page', edit_home_page_path(HomePage.last), class: 'btn btn-default right' %>
      <%= link_to 'Go to Places', places_path, class: 'btn btn-default right' %>
    </h1>
    <%= link_to "New List", new_list_path, class: "btn btn-default right" %>
  </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Places</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.kind %></td>
        <td>
          <% list.places.each do |place| %>
            <%= place.name %>
            <br/>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
