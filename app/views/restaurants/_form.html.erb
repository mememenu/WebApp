<%= form_for @restaurant, :html => { :multipart => true } do |f| %>
  <% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Restaurant Form
      </div>
      <div class="panel-body">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :avatar, "Add Restaurant Logo" %><br>
          <%= f.file_field :avatar %>
        </div>

        <%= f.fields_for :restaurant_tile do |builder| %>
          <fieldset>
            <%= builder.label :avatar, "Add Restaurant Tile for IOS" %><br>
            <%= builder.file_field :avatar %>
          </fieldset>
        <% end %>

        <%= f.fields_for :restaurant_header do |builder| %>
          <fieldset>
            <%= builder.label :avatar, "Add Restaurant Page Header Image for IOS" %><br>
            <%= builder.file_field :avatar %>
          </fieldset>
        <% end %>


        <div class="field">
          <%= f.label :address_1 %><br>
          <%= f.text_field :address_1, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :address_2 %><br>
          <%= f.text_field :address_2, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :state %><br>
          <%= f.select :state, options_for_select(us_states, restaurant_state)%>
        </div>
        <div class="field">
          <%= f.label :zipcode %><br>
          <%= f.text_field :zipcode, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :zone %><br>
          <%= f.text_field :zone, class: 'form-control'%>
        </div>
        <div class="field">
          <%= f.label :region %><br>
          <%= f.select :region, options_for_select(current_regions, restaurant_region)%>
        </div>
        <div class="field">
          <%= f.label :phone %><br>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :website %><br>
          <%= f.text_field :website, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :facebook %><br>
          <%= f.text_field :facebook, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :twitter %><br>
          <%= f.text_field :twitter, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :instagram %><br>
          <%= f.text_field :instagram, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :photographer_name %><br>
          <%= f.text_field :photographer_name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :photographer_media_link %><br>
          <%= f.text_field :photographer_media_link, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :delivery_url %><br>
          <%= f.text_field :delivery_url, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :monday_hours %><br>
          <%= f.text_field :monday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :tuesday_hours %><br>
          <%= f.text_field :tuesday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :wednesday_hours %><br>
          <%= f.text_field :wednesday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :thursday_hours %><br>
          <%= f.text_field :thursday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :friday_hours %><br>
          <%= f.text_field :friday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :saturday_hours %><br>
          <%= f.text_field :saturday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :sunday_hours %><br>
          <%= f.text_field :sunday_hours, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :hide %><br>
          <%= f.check_box :hide %>
        </div>
        <hr>
        <!-- <div class="field">
          <%= hidden_field_tag "restaurant[cuisine_ids][]", nil %>
          <% Cuisine.all.each do |cuisine| %>
          <%= check_box_tag "restaurant[cuisine_ids][]", cuisine.id, @restaurant.cuisine_ids.include?(cuisine.id), id: dom_id(cuisine) %>
          <%= label_tag dom_id(cuisine), cuisine.genre %><br>
          <% end %>
        </div> -->
        <div class="actions">
          <%= f.submit %>
        </div>

      </div> <!-- end of class panel-body -->
    </div> <!-- end of class panel-heading -->
  </div> <!-- end of class panel panel-default -->

<% end %>
