<%= form_for @restaurant, :html => { :multipart => true } do |f| %>
  <% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Restaurant Form
      </div>
      <div class="panel-body">

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :address_1, "Address" %><br>
          <%= f.text_field :address_1, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :state %><br>
          <%= f.select :state, options_for_select(us_states, restaurant_state)%>
        </div>
        <div class="field">
          <%= f.label :zipcode %><br>
          <%= f.text_field :zipcode, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :zone %><br>
          <%= f.text_field :zone, class: 'form-control'%>
        </div>
        <div class="field">
          <%= f.label :region %><br>
          <%= f.select :region, options_for_select(current_regions, restaurant_region)%>
        </div>
        <hr>
        <div class="field">
          <%= f.label :phone %><br>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :website, 'Website URL' %><br>
          <%= f.text_field :website, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :facebook, 'Facebook URL' %><br>
          <%= f.text_field :facebook, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :twitter, 'Twitter URL' %><br>
          <%= f.text_field :twitter, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :instagram, 'Instagram URL' %><br>
          <%= f.text_field :instagram, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :photographer_name, 'Photographer Handle' %><br>
          <%= f.text_field :photographer_name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :photographer_media_link, 'Photographer URL' %><br>
          <%= f.text_field :photographer_media_link, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :delivery_url %><br>
          <%= f.text_field :delivery_url, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :foursquare_id, 'Foursquare ID' %><br>
          <%= f.text_field :foursquare_id, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :status, 'iOS Status Message' %><br>
          <%= f.text_field :status, class: 'form-control' %>
        </div>
        <hr>
        <div class="field">
          <%= f.label :avatar, "Add Restaurant Logo" %><br>
          <%- unless f.object.new_record? %>
            <%= image_tag f.object.avatar.url(:thumb) %>
          <%- end %>
          <%= f.file_field :avatar %>
        </div>

        <%= f.fields_for :restaurant_tile, @restaurant.restaurant_tile || @restaurant.build_restaurant_tile do |builder| %>
          <fieldset>
            <%= builder.label :avatar, "Add Restaurant Tile for IOS" %><br>
            <%- unless @restaurant.restaurant_tile.new_record? %>
              <%= image_tag @restaurant.restaurant_tile.avatar.url(:thumb) %>
            <%- end %>
            <%= builder.file_field :avatar %>
          </fieldset>
        <% end %>

        <%= f.fields_for :restaurant_header, @restaurant.restaurant_header || @restaurant.build_restaurant_header do |builder| %>
          <fieldset>
            <%= builder.label :avatar, "Add Restaurant Page Header Image for IOS" %><br>
            <%- unless @restaurant.restaurant_header.new_record? %>
              <%= image_tag @restaurant.restaurant_header.avatar.url(:thumb) %>
            <%- end %>
            <%= builder.file_field :avatar %>
          </fieldset>
        <% end %>

        <%= f.fields_for :restaurant_banner, @restaurant.restaurant_banner || @restaurant.build_restaurant_banner do |builder| %>
          <fieldset>
            <%= builder.label :avatar, "Add Restaurant Banner for IOS" %><br>
            <%- unless @restaurant.restaurant_banner.new_record? %>
              <%= image_tag @restaurant.restaurant_banner.avatar.url(:thumb) %>
            <%- end %>
            <%= builder.file_field :avatar %>
          </fieldset>
        <% end %>
        <hr>
        <div class="field">
          <%= f.label :hide %><br>
          <%= f.check_box :hide %>
        </div>
        <hr>
        <div class="actions">
          <%= f.submit %>
        </div>

      </div> <!-- end of class panel-body -->
    </div> <!-- end of class panel-heading -->
  </div> <!-- end of class panel panel-default -->

<% end %>
