<script>
// Hides and Shows dishes and categories by Menu 
<% @restaurant.menus.each do |menu| %>
<% other_menus = Menu.where(restaurant_id: @restaurant.id).where.not(name: menu.name) %>
<% other_menus2 = Menu.where(restaurant_id: @restaurant.id).where.not(name: menu.name) %>

$(document).ready(function(){
  $('span#<%=menu.clean_name%>').click(function(){
    console.log('<%=menu.clean_name%> clicked');
    $('<%=restaurant_category_and_category_menu_names%>').removeClass('selected-category');
    $('span#<%=menu.clean_name%> a').addClass('selected-menu');
    $("<%= other_menus.map{|b| b.clean_name + ' a'}.map{|c| c.prepend('span#')}.join(', ')%>").removeClass('selected-menu');
    $('<%= other_menus2.map{|a| a.clean_name}.map{|a| a.prepend(".")}.join(", ") %>').addClass('zoomOutDown hidden');
    $('.<%=menu.clean_name%>').removeClass('zoomOutDown zoomOutUp zoomInDown zoomInUp hidden');
    $('.<%=menu.clean_name%>').addClass('zoomInDown');
  });
});
<% end %>

// Hides and shows dishes based on category
<% @restaurant.menus.each do |menu| %>
<% menu.categories.each do |category| %>
// restaurant_category_names can be found in restaurant helper
<% other_category_and_category_menu_names = restaurant_category_names.delete_if{|name| name==category.clean_name}.map{|a| a+category.menu.clean_name} %>
<% other_category_and_category_menu_names2 = restaurant_category_names.delete_if{|name| name==category.clean_name}.map{|a| a+category.menu.clean_name} %>
$(document).ready(function(){
  $('a#<%=category.clean_name + category.menu.clean_name%>').click(function(){
    console.log('<%=category.clean_name+category.menu.clean_name%> clicked');
    $(this).addClass('selected-category');
    $("<%=other_category_and_category_menu_names.map{|b| b.prepend('a#')}.join(', ')%>").removeClass('selected-category');
    $("<%=other_category_and_category_menu_names2.map{|a| a.prepend('.')}.join(', ')%>").addClass('zoomOutDown hidden');
    $('.<%=category.clean_name+category.menu.clean_name%>').removeClass('zoomOutDown zoomOutUp zoomInDown zoomInUp hidden');
    $('.<%=category.clean_name+category.menu.clean_name%>').addClass('zoomInUp');
  });
});
<% end %>
<% end %>

</script>