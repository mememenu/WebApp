
<section class="tzportfolio-wrap">
  <div class="container">

    <!-- start of restaurant info -->
    <h2 class="title-restaurant"><%= @restaurant.name.upcase %></h2>
    <h3 class="location-restaurant"><%= @restaurant.city.upcase %></h3>
    <hr>
    <div class="info-restaurant">
      <%= @restaurant.address_1 %><br>
      <% unless @restaurant.address_2.empty? %>
      <%= @restaurant.address_2 %><br>
      <% end %>
      <%= @restaurant.city %><br>
      <%= number_to_phone(@restaurant.phone, area_code: true) %>
      <hr>
    </div> <!--   End of restaurant info -->


    <!-- start of Restaurant menus  -->
    <div class="menu-options">
      <% @active_menus[0...-1].each do |menu| %>
      <span id='<%=menu.clean_name%>'><a><%= menu.name.upcase%></a></span> â€¢ 
      <% end %>
      <% if @active_menus.count > 0 %>
      <span id='<%=@active_menus.last.clean_name%>'><a><%= @active_menus.last.name.upcase %></a></span>
      <% end %>

      <!--  start of Restaurant Menu Categories -->
      <div class="menu-list tzfilter">
        <% @active_categories.each do |category| %>
        <a id="<%= category.clean_name + category.menu.clean_name %>" class="<%=category.menu.clean_name%> hidden animated category"><%= category.name %></a>
        <% end %>        
      </div><!--   End of Restaurant menu categories -->
    </div><!-- End of Restaurant menus -->



    <!-- start of Pictures of Food -->
    <div class="tzportfolio-pages tz-no-mansory row">
      <% @active_dishes.each do |dish| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 <%= dish.category.clean_name + dish.category.menu.clean_name %> <%= dish.category.menu.clean_name %> food-photos animated zoomIn">
        <div class="element">
          <div class="tz-inner">
            <div class="tz-image-item">
              <%= image_tag dish.avatar.url(:large) %>
            </div>
            <h6 class="dish-name"><%= dish.name.upcase %></h6>
            <!--  start of dish ingredients -->
            <div class="text-center ingredient">      
              <% dish.ingredients[0...-1].each do |ingredient| %>
              <%= ingredient.name.upcase %>,
              <% end %>

              <% if dish.ingredients.count > 0 %>  
              <%= dish.ingredients.last.name.upcase %>
              <% end %>
            </div><!--   end of dish ingredients -->
          </div> <!-- end of tz-inner -->
        </div> <!-- end of element -->
      </div> <!-- end of column -->
      <% end %><!-- end of active_dishes loop -->
    </div><!-- end of food pictures -->

  </div><!-- end of Container -->
</section><!--end class tzportfolio-wrap-->





