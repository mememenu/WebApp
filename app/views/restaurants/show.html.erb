<!-- restaurant info -->
<section class="tzportfolio-wrap">
  <div class="container">
    <h2 class="title-restaurant"><%= @restaurant.name.upcase %></h2>
    <h3 class="location-restaurant"><%= @restaurant.city.upcase %></h3>
    <hr>
    <div class="info-restaurant">
      <%= @restaurant.address_1 %><br>
      <% unless @restaurant.address_2.empty? %>
      <%= @restaurant.address_2 %><br>
      <% end %>
      <%= @restaurant.city %><br>
      <%= number_to_phone(@restaurant.phone, area_code: true) %>
    </div><!--   End of restaurant info --> 
    <hr>
    <!-- Restaurant menus  -->
    <div class="menu-options">
      <% @restaurant.menus[0...-1].each do |menu| %>
      <a><span id='<%=menu.clean_name%>'> <%= menu.name.upcase%> </span></a> â€¢ 
      <% end %>
      <a><span id='<%=@restaurant.menus.last.clean_name%>'> <%= @restaurant.menus.last.name.upcase %> </span></a>
      <!--   Restaurant Menu Categories -->
      <div class="menu-list tzfilter">
        <% @restaurant.menus.each do |menu| %>
        <% menu.categories.each do |category| %>
        <a id="<%=category.clean_name%>" class="<%=category.menu.clean_name%>"><%= category.name %></a>
        <% end %>        
        <% end %>
      </div><!--   End of restaurant menu categories -->
    </div><!-- End of restaurant menus -->
    <!--   Pictures of Food -->
    <div class="tzportfolio-pages tz-no-mansory">
      <div class="row">
        <% @dishes.reverse.each do |dish| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 <%= dish.category.clean_name %> <%= dish.category.menu.clean_name %> food-photos">
          <div class="element">
            <div class="tz-inner">
              <div class="tz-image-item">
                <%= image_tag dish.avatar.url(:large) %>
              </div>
              <h6 class="dish-name"><%= dish.name.upcase %></h6>
<!--               <% dish.ingredients.each do |ingredient| %>
              <a><%= ingredient.name.upcase %></a>
              <% end %> -->
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div><!-- end of food pictures -->
  </div><!-- Closes top container -->
</section><!--end class tzportfolio-wrap-->
