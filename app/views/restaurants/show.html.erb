<!-- restaurant info -->
<section class="tzportfolio-wrap">
  <div class="container">
    <h2 class="title-restaurant"><%= @restaurant.name.upcase %></h2>
    <h3 class="location-restaurant"><%= @restaurant.city.upcase %></h3>
    <hr>
    <div class="info-restaurant">
      <%= @restaurant.address_1 %><br>
      <% unless @restaurant.address_2.empty? %>
        <%= @restaurant.address_2 %><br>
      <% end %>
      <%= @restaurant.city %><br>
      <%= number_to_phone(@restaurant.phone, area_code: true) %>
    </div><!--   End of restaurant info --> 
    <hr>

    <!-- Restaurant menus  -->
    <div class="menu-options">
      <% @restaurant.menus[0...-1].each do |menu| %>
        <a><span id='<%=menu.clean_name%>'> <%= menu.name.upcase%> </span></a> â€¢ 
      <% end %>
      <a><span id='<%=@restaurant.menus.last.clean_name%>'> <%= @restaurant.menus.last.name.upcase %> </span></a>

      <!--   Restaurant Menu Categories -->
      <div class="menu-list tzfilter">
        <% @restaurant.menus.each do |menu| %>
          <% menu.categories.each do |category| %>
            <a id="<%=category.clean_name%>" class="<%=category.menu.clean_name%>"><%= category.name %></a>
          <% end %>        
        <% end %>
      </div><!--   End of restaurant menu categories -->
    </div><!-- End of restaurant menus -->

  


    <!--   Pictures of Food -->
    <div class="tzportfolio-pages tz-no-mansory">
      <div class="row">
        <% @dishes.reverse.each do |dish| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 <%= dish.category.clean_name %> <%= dish.category.menu.clean_name %> food-photos">
          <div class="element">
            <div class="tz-inner">
              <div class="tz-image-item">
                <%= link_to dish do %>
                <%= image_tag dish.avatar.url(:large) %>
              </div>
              <h6 class="dish-name"><%= dish.name.upcase %></h6>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div><!-- end of food pictures -->
  </div><!-- Closes top container -->
</section><!--end class tzportfolio-wrap-->

<!-- Admin Panel -->
<% if current_user %>
  <% if current_user.admin || current_user.restaurant_id == @restaurant.id%>
  <div class="container-fluid">
    <div class="text-center">
      <h1> Administrator Panel </h1>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-8">
        <h2 class="text-center">Active Menus</h2>
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Edit</th>
              <th>Destroy</th>
            </tr>
          </thead>
          <tbody>
            <% @active_menus.each do |menu| %>
            <tr>
              <td><%= menu.name %></td>
              <td><%= link_to edit_menu_path(menu) do%>
                  <i class="fa fa-pencil-square-o"></i>
                  <%end%>
              </td>
              <td><%= link_to menu, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <% if @inactive_menus.count > 0 %>
        <h2 class="text-center">Inactive Menus</h2>
        <table class="table table-condensed">
          <thead>
            <tr class="active">
              <th>Name</th>
              <th>Edit</th>
              <th>Destroy</th>
            </tr>
          </thead>
          <tbody>
            <% @inactive_menus.each do |menu| %>
            <tr class="active">
              <td><%= menu.name %></td>
              <td><%= link_to edit_menu_path(menu) do%>
                  <i class="fa fa-pencil-square-o"></i>
                  <%end%>
              </td>
              <td><%= link_to menu, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% end %>

      </div>
      <div class="col-md-4 text-center">
        <div><%= link_to 'Edit Restaurant Details', edit_restaurant_path(@restaurant) %></div>
        <h2> New Menu </h2>
        <br>
        <%= render 'menus/form' %> 
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-8">
        <h1 class="text-center">All Categories</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Menu</th>
              <th>Hidden</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
            <% if category.menu.restaurant.id == @restaurant.id %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.menu.name %></td>
              <td><%= category.hide %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4 text-center">
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <h2> New Category </h2>
        <br>
        <%= render 'categories/form' %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">All dishes</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Category</th>
              <th>Menu</th>
              <th>Hidden</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @dishes.each do |dish| %>
              <% if dish.category.menu.restaurant.id == @restaurant.id %>
                <tr>
                  <td><%= dish.name %></td>
                  <td><%= dish.description %></td>
                  <td><%= dish.category.name %></td>
                  <td><%= dish.category.menu.name %></td>
                  <td><%= dish.hide %></td>
                  <td><%= link_to 'Show', dish %></td>
                  <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
                  <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12 text-center">
        <h1>New Dish</h1>
        <%= render 'dishes/form' %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
<!-- End of Admin Panel -->




<script>
// Hides and Shows dishes and categories by Menu 
<% @restaurant.menus.each do |menu| %>
  <% menus = Menu.where(restaurant_id: @restaurant.id).where.not(name: menu.name).map{|a| a.clean_name} %>
  $(document).ready(function(){
    $('span#<%=menu.clean_name%>').click(function(){
      console.log('<%=menu.clean_name%> clicked');
      $('<%= menus.map{|a| a.prepend(".")}.join(", ") %>').hide('slow');
      $('.<%=menu.clean_name%>').show('slow');
    });
  });
<% end %>

// Hides and shows dishes based on category
<% @restaurant.menus.each do |menu| %>
  <% menu.categories.each do |category| %>
    // other_category_names can be found in restaurant helper
    <% other_category_names = restaurant_category_names.delete_if{|name| name==category.clean_name}.map{|a| a.prepend(".")}.join(", ") %> 
    $(document).ready(function(){
      $('a#<%=category.clean_name%>').click(function(){
        console.log('<%=category.clean_name%> clicked');
        $('<%=other_category_names%>').hide('slow');
        $('.<%=category.clean_name%>').show('slow');
      });
    });
  <% end %>
<% end %>

</script>